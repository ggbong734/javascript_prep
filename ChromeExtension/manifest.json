{
  "manifest_version": 2,
  "name": "Focus",
  "version": "1.0",
  "description": "feature to make the redirect user from Youtube to focus on work instead",
  "content_scripts": [
      {
          "matches":["https://www.youtube.com/*"],
          "js": ["./main.js"]
      },
      {
        "matches":["https://www.netflix.com/*"],
        "js": ["./netflix.js"]
      }
  ],
  "browser_action": {
    "default_icon": "focus.png",
    "popup": "hello.htm"
  },
   "background": {
    "scripts": [
       "background.js"
    ],
    "persistent": false
 }
}
